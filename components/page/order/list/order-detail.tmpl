<!--訂單詳情-->

<div class="order-detail">

    <div class="box-body">
        <div class="form-group">
            <label> 订单编号:</label>
            <label > {{orderNo}}</label>
        </div>
        <div class="form-group">
            <label> 商品名称:</label>
            <label > {{productName}}</label>
        </div>
        <div class="form-group">
            <label> 单价:</label>
            <label > {{price}}</label>
            <input type="text" class="form-control" id="order-price" value="{{price}}">
        </div>
        <div class="form-group">
            <label> 数量:</label>
            <label > {{count}}</label>
        </div>
        <div class="form-group">
            <label> 用户:</label>
            <label > {{buyer}}</label>
            <input type="text" class="form-control" id="order-buyer" value="{{buyer}}">
        </div>
        <div class="form-group">
            <label> 状态:</label>
            <label > {{status}}</label>
        </div>
        <div class="form-group">
            <label> 总金额:</label>
            <label > {{totalCost}}</label>
            <input type="text" class="form-control" id="order-totalCost" value="{{totalCost}}" >
        </div>
        <div class="form-group">
            <label> 下单时间:</label>
            <label > {{totalCost}}</label>
        </div>
        <div class="form-group">
            <label> 充值账号:</label>
            <label > {{chargeAccount}}</label>
            <input type="text" class="form-control" id="order-chargeAccount" value="{{chargeAccount}}">
        </div>
        <div class="form-group">
            <label> 支付方式:</label>
            <label > {{payType}}</label>
            <input type="text" class="form-control" id="order-payType" value="{{payType}}">
        </div>
        <div class="form-group">
            <label>支付时间:</label>
            <label > {{payTime}}</label>
            <input type="text" class="form-control" id="order-payTime" value="{{payTime}}">
        </div>
        <div class="form-group">
            <label>订单类型:</label>
            <label > {{totalCost}}</label>
            <input type="text" class="form-control" id="order-type" value="{{type}}" />
        </div>
        <div class="form-group">
            <label>备注:</label>
            <label > {{remark}}</label>
            <textarea  id="notice-content" class="form-control" rows="5" >
                {{remark}}
            </textarea>
        </div>






    </div>

</div>